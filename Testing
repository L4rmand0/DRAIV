  OLD_version,	
  OLD_Db_user_id,
  
  
  NEW_DNI_id,
  NEW_row_id, 
  NEW_First_name,
  NEW_Second_name,
  NEW_F_last_name,
  NEW_S_last_name,
  NEW_Gender,
  NEW_Education,
  NEW_E_mail_address,
  NEW_address, 
